<pu:WindowX x:Class="ProjectManagement.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
            xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI"
            xmlns:local="clr-namespace:ProjectManagement"
            mc:Ignorable="d"
            Title="MainWindow"
            Height="700"
            Width="1000"
            pu:WindowXCaption.Background="Transparent"
            pu:WindowXCaption.Buttons="None">
    <pu:WindowXCaption.HeaderTemplate>
        <DataTemplate></DataTemplate>
    </pu:WindowXCaption.HeaderTemplate>
    <Grid Margin="0,-35,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,-5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Image Width="25"
                   Height="25"
                   Source="/ProjectManagement;component/Resources/Images/header.jpg" />
            <!--<ListBox x:Name="LsbMenu"
                         Grid.Row="1"
                         Margin="0,0,-5,0"
                         Background="Transparent"
                         BorderThickness="0"
                         pu:ListBoxHelper.ItemsHeight="70"
                         pu:ListBoxHelper.ItemsPadding="0"
                         HorizontalContentAlignment="Stretch"
